---
import Layout from "../layouts/Landing.astro";
// Define your links here
type Link = {
  title: string;
  description: string;
  url: string;
  isExternal?: boolean;
  date?: string;
};

type LinkGroup = {
  title?: string;
  links: Link[];
};

const links: LinkGroup[] = Astro.props.links;

// Function to format dates
function formatDate(dateString: string) {
  if (!dateString) return null;

  const date = new Date(dateString);
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const day = String(date.getDate()).padStart(2, "0");
  return `${year}-${month}-${day}`;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Links Landing Page</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <main class="container">
      <header>
        <h1>Hima's Presentation Archive</h1>
        <p>Collection of public presentations</p>
      </header>

      {
        links.map((section) => (
          <section class="section">
            {section.title && <h2 class="section-title">{section.title}</h2>}
            <div class="links-container">
              {section.links.map((link) => (
                <a
                  href={link.url}
                  class="link-card"
                  target={link.isExternal ? "_blank" : undefined}
                  rel={link.isExternal ? "noopener noreferrer" : undefined}
                >
                  <div class="link-content">
                    <h3 class={link.date ? "with-date" : undefined}>
                      {link.title}
                    </h3>
                    <p>{link.description}</p>
                  </div>
                  {link.date && (
                    <span class="date-badge">{formatDate(link.date)}</span>
                  )}
                  {link.isExternal && (
                    <span class="external-indicator">â†—</span>
                  )}
                </a>
              ))}
            </div>
          </section>
        ))
      }

      <footer>
        <p>
          &copy; {new Date().getFullYear()} Himawan Winarto. All rights reserved.
        </p>
      </footer>
    </main>
  </body>
</html>

<style>
  :root {
    --background: #f9fafb;
    --foreground: #111827;
    --primary: #6366f1;
    --primary-hover: #4f46e5;
    --card-bg: #ffffff;
    --card-border: #e5e7eb;
    --card-hover: #f3f4f6;
    --section-border: #e5e7eb;
    --date-bg: #f3f4f6;
    --date-text: #4b5563;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: system-ui, Roboto, sans-serif;
    background-color: var(--background);
    color: var(--foreground);
    line-height: 1.6;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  header p {
    color: #6b7280;
    font-size: 1.125rem;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--section-border);
  }

  .links-container {
    display: grid;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .links-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .link-card {
    display: block;
    padding: 1.5rem;
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 0.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    position: relative;
  }

  .link-card:hover {
    background-color: var(--card-hover);
    transform: translateY(-2px);
  }

  .link-content {
    padding-right: 1.5rem;
  }

  .link-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    &.with-date {
      padding-right: 4.25rem; /* Extra space if date-badge is present */
    }
    word-break: break-word;
  }

  .link-card p {
    color: #6b7280;
    font-size: 0.875rem;
    margin-bottom: 0.75rem;
  }

  .date-badge {
    position: absolute;
    top: 1rem;
    right: 2.5rem;
    display: inline-block;
    background-color: var(--date-bg);
    color: var(--date-text);
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    margin-top: 0;
  }

  @media (max-width: 400px) {
    .date-badge {
      display: none;
    }
  }

  .external-indicator {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 1rem;
  }

  footer {
    margin-top: 3rem;
    text-align: center;
    color: #6b7280;
    font-size: 0.875rem;
  }
</style>
